                + "3) Display Blocked Calls\n"
                + "4) Quit Program");

         userchoice = myObj.nextInt();  // Read user input
        
       
         switch(userchoice) {
            case 1:
                    // Enter register code
                break;
            case 2:
                    // Enter Report Spam
                 break;
          
            case 3:
                    // Enter Display Blocked call code
                 break;    
            case 4: 
                
               userchoice = 4; 
                 
               break;    
       
            default:
    // code block
                        } // switch case
         
         
         
         
 
        } // while loop 
        
